AT_SETUP([static struct in block scope])
AT_KEYWORDS([ssblock])

CFLOW_OPT([-v -ix],[
CFLOW_CHECK([
int
foo ()
{
  static struct {
    int f;
  } k[[]] = { 0 };
  k[[0]]=1;
}

int
main()
{
     foo();
}
],
[main() <int main () at prog:12>:
    foo() <int foo () at prog:3>:
        k <struct { ... } k[[]] at prog:7>])
])

AT_CLEANUP

